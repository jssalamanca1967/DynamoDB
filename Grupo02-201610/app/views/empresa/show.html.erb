<% provide(:info_empresa_active, "active") %>
<% provide(:title, "#{@empresa.nombre_empresa}") %>

<div class="container">
  <div class="page-header">
    <h1><small>Empresa: </small> <%= @empresa.nombre_empresa_real%></h1>
  </div>

  <% if current_empresa %>
    <%= link_to "Crear proyecto", "/empresas/#{@empresa.nombre_empresa}/proyectos/new", :class => "btn btn-success" %>
  <% end %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th><h2>#</h2></th>
        <th><h2>Proyecto</h2></th>
        <th><h2>Descripción</h2></th>
        <th><h2>Pago</h2></th>
        <th><h2>Opciones</h2></th>
      </tr>
    </thead>
    <% num = 1 %>
    <% @proyectos.each do |p| %>
        <tr>
          <th scope=row><h4><%= num%></h4></th>
          <td><h4><%= p.nombre %></h4></td>
          <td><p><%= p.descripcion %></p></td>
          <td><h4>$<%= p.valor_pagar %></h4></td>
          <td>
            <div class="btn-group btn-group-sm" role="group" aria-label="...">
              <%= link_to "Ver más", "/empresas/#{@empresa.nombre_empresa}/#{p.id}", :class => "btn btn-info btn-xm", :role => "button" %>
            </div>
          </td>
        </tr>
        <%num = num + 1%>
    <% end %>
  </table>
  <%= will_paginate @proyectos %>

</div>
