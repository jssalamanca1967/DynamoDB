<% provide(:options_active, "active") %>
<% provide(:title, "Perfil Empresa") %>

<div class="create">
  <div class="container">
    <div class="page-header">
      <h2><small>Perfil de</small> <%= @empresa.nombre_empresa %></h2>
    </div>
    <%= form_for(@empresa, :html => {:class => 'form-horizontal'}) do |d| %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Nombre Empresa</label>
      <div class="col-sm-10">
        <%= d.text_field :nombre_empresa, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= d.email_field :email, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= d.submit value="Guardar cambios", :class => "btn btn-primary" %>
        <%= d.button value="Restaturar valores", type: :reset, :class => "btn btn-default" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
