<% provide(:info_empresa_active, "active") %>
<% provide(:title, "#{@proyecto.nombre}") %>

<div class="container">
  <div class="page-header">
    <h1><small>Proyecto: </small> <%= @proyecto.nombre %></h1>
  </div>
  <% if current_empresa %>
  <div class="btn-group" role="group" aria-label="...">
    <%= link_to "Crear nuevo dise침o", "/empresas/#{@empresa.nombre_empresa}/#{@proyecto.id}/disenios/new", :class => "btn btn-success" %>
    <%= link_to "Editar proyecto", "/empresas/#{@empresa.nombre_empresa}/#{@proyecto.id}/edit", :class => "btn btn-warning"  %>
    <%= link_to "Eliminar proyecto", "/empresas/#{@empresa.nombre_empresa}/#{@proyecto.id}/delete", :class => "btn btn-danger"  %>
  </div>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th><h2>#</h2></th>
        <th><h2>Nombre</h2></th>
        <th><h2>Email</h2></th>
        <th><h2>Precio</h2></th>
        <th><h2>Fecha</h2></th>
        <th><h2>Estado</h2></th>
        <th><h2>Opciones</h2></th>
      </tr>
    </thead>
    <% num = 1 %>
    <% @disenios.each do |p| %>
        <tr>
          <th scope=row><p><%= num %></p></th>
          <td><p><%= p.nombre_diseniador %> <%= p.apellido_diseniador%></p></td>
          <td><p><%= p.email_diseniador %></p></td>
          <td><p>$<%= p.precio_solicitado %></p></td>
          <td><p><%= p.created_at %></p></td>
          <td><p><%= p.estado %></p></td>
          <td>
            <div class="btn-group btn-group-sm" role="group" aria-label="...">
              <%= link_to "Ver m치s", "/empresas/#{@empresa.nombre_empresa}/#{@proyecto.id}/#{p.id}", :class => "btn btn-info btn-sm", :role => "button"  %>
            </div>
          </td>
        </tr>
        <%num = num + 1%>
    <% end %>
  </table>
  <%= will_paginate @disenios %>
  <% else %>
  <div class="well">
    <%= link_to "Crear nuevo dise침o", "/empresas/#{@empresa.nombre_empresa}/#{@proyecto.id}/disenios/new", :class => "btn btn-success" %>
  </div>

  <div class="row">
    <% num = 1 %>
    <% @disenios.each do |p| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag p.picture.url if p.picture? %>
        <div class="caption">
          <h3>Dise침o <%= num %></h3>
          <p><h3>Fecha:</h3> <%= p.created_at %></p>
        </div>
      </div>
    </div>
    <% num += 1 %>
    <% end %>
  </div>
  <%= will_paginate @disenios %>
  <% end %>
</div>
