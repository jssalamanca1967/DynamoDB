<% provide(:info_empresa_active, "active") %>
<% provide(:title, "Crear Proyecto") %>

<div class="create">
  <div class="container">
    <div class="page-header">
      <h1>Nuevo proyecto</h1>
    </div>
    <%= form_for(@proyecto, :html => {:class => 'form-horizontal'}) do |d| %>
    <div class="form-group">
      <label for="nombreProyecto" class="col-sm-2 control-label">Nombre</label>
      <div class="col-sm-10">
        <%= d.text_field :nombre, :placeholder => "Nombre", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="descripcionProyecto" class="col-sm-2 control-label">Descripcion</label>
      <div class="col-sm-10">
        <%= d.text_area :descripcion, :placeholder => "DescripciÃ³n", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="cantidadProyecto" class="col-sm-2 control-label">Cantidad</label>
      <div class="col-sm-10">
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <p><%= d.number_field :valor_pagar, :class => "form-control" %></p>
          <div class="input-group-addon">.00</div>
        </div>
      </div>
    </div>

    <%= d.hidden_field :empresa_ids, :value=>@empresa.id, :readonly => true %></p>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= d.submit value="Guardar cambios", :class => "btn btn-primary" %>
