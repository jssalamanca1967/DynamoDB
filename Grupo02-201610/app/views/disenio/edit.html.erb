<% provide(:info_empresa_active, "active") %>
<% provide(:title, "Editar Diseño") %>

<div class="create">
  <div class="container">
    <div class="page-header">
      <h2><small>Editar Diseño de</small> <%= @proyecto.nombre%></h2>
    </div>
    <%= form_for(@disenio, :html => {:class => 'form-horizontal'}) do |d| %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Nombre</label>
      <div class="col-sm-10">
        <%= d.text_field :nombre_diseniador, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Apellido</label>
      <div class="col-sm-10">
        <%= d.text_field :apellido_diseniador, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= d.email_field :email_diseniador, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="cantidadProyecto" class="col-sm-2 control-label">Cantidad</label>
      <div class="col-sm-10">
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <p><%= d.number_field :precio_solicitado , :class => "form-control" %></p>
          <div class="input-group-addon">.00</div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Estado</label>
      <div class="col-sm-10">
        <%= d.text_field :estado, :class => "form-control", :readonly => true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= d.submit value="Guardar cambios", :class => "btn btn-primary" %>
        <%= d.button value="Restaturar valores", type: :reset, :class => "btn btn-default" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
