<% provide(:info_empresa_active, "active") %>
<% provide(:title, "Nuevo Dise単o") %>

<div class="create">
  <div class="container">
    <div class="page-header">
      <h1><small>Empresa </small><%= @empresa.nombre_empresa%></h1>
      <h2><small>Proyecto </small><%= @proyecto.nombre%></h2>
    </div>
    <%= render 'shared/error_messages' %>
    <%= form_for(@disenio, :html => {:class => 'form-horizontal', :multipart => true}) do |d| %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Nombres</label>
      <div class="col-sm-10">
        <%= d.text_field :nombre_diseniador, :placeholder => "Dise単ador", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Apellidos</label>
      <div class="col-sm-10">
        <%= d.text_field :apellido_diseniador, :placeholder => "Dise単ador", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= d.email_field :email_diseniador, :placeholder => "...@...", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Precio</label>
      <div class="col-sm-10">
        <%= d.number_field :precio_solicitado, :placeholder => "0", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Archivo</label>
      <div class="col-sm-10">
        <%= d.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Estado</label>
      <div class="col-sm-10">
        <%= d.text_field :estado, :value => 'En proceso', :class => "form-control", :readonly => true %>
      </div>
    </div>
    <%= d.hidden_field :proyecto_id, :value=>@proyecto.id, :readonly => true%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= d.submit value="Crear nuevo Dise単o", :class => "btn btn-primary" %>
        <%= d.button value="Limpiar", type: :reset, :class => "btn btn-default" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
